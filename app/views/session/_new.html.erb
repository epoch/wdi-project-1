<!-- make the login stuff smaller -->
<div class="row">
  <%= form_tag login_path, :class => "navbar-form navbar-right login-nav" do %>
  <div class="form-group form-group-sm">
    <%= text_field :username, nil, :autofocus => :true, :class => "form-control", :placeholder => "Username" %>
  </div>
  <div class="form-group form-group-sm">
    <%= password_field_tag :password, nil, :class => "form-control", :placeholder => "Password" %>
  </div>

    <button class="btn btn-success btn-sm">Sign in</button>

  <% end %>
</div>

<% if flash[:error].present? %>
  <div class="row">
    <p class="text-right login-error"><%= flash[:error] if flash[:error].present? %></p>
  </div>
<% end %>
