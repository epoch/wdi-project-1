<% unless @current_user.present? %>
  <div class="jumbotron text-center">
    <h1 class="title-text">
      <span class="snip">snip</span><span class="braces">{</span><span class="it">it</span><span class="braces">}</span>
    </h1>
    <br>
    <p>Get inspired by user-shared code, ready for deployment on your own site.</p>

    <br>

    <p>
      <a class="btn btn-info btn-lg" href="<%= about_path %>" role="button">Learn more</a>
      <a class="btn btn-primary btn-lg" href="<%= new_user_path %>">Get started</a>
    </p>
  </div>
<% end %>

<div class="row-custom">
  <% @images.shuffle.each do |image| %>
    <div class="col-lg-3 col-md-4 col-sm-6 animated fadeInLeft">
      <a href="<%= "/images/#{ image.id }" %>" class="img-responsive">
        <img class="img-grid" src="<%= image.image_url %>" alt="">
      </a>
    </div>
  <% end %>
</div>
