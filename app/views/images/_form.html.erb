<%= form_for @image do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :autofocus => true %>

  <%= f.label :source %>
  <%= f.text_field :source, :required => true %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :remote_image_url %>
  <%= f.text_field :remote_image_url %>

  <p>or</p>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.submit %>
<% end %>
