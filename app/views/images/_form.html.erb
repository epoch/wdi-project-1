<h2>Add Image</h2>

<%= form_for @image do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :autofocus => true, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :source %>
    <%= f.text_field :source, :required => true, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :remote_image_url %>
    <%= f.text_field :remote_image_url, :class => "form-control" %>
  </div>

  <p>or</p>

  <div class="form-group">
    <%= f.label :Upload_an_image %>
    <%= f.file_field :image %>
  </div>
  <br>
  <div class="form-group">
    <%= f.submit "Post Image", :class => "btn btn-signin" %>
  </div>
<% end %>
