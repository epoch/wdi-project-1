<h2><%= @post.title %></h2>

<%= link_to 'Back to posts', posts_path, :class => 'btn btn-default' %>

<% if @current_user.present? && (@post.user_id != @current_user.id) %>
  <% unless @current_user.library.posts.include? @post %>
    <%= link_to "/posts/#{ @post.id }/add_to_library", :method => :post, :class => "btn btn-success" do %>
        <i class="glyphicon glyphicon-plus"></i> Add to Library
    <% end %>
  <% else %>
  <!-- remove from lib here should redirect to the list of posts (index) -->
    <%= link_to "/posts/#{ @post.id }/remove_from_library", :method => :post, :class => "btn btn-danger" do %>
      <i class="glyphicon glyphicon-minus"></i> Remove from Library
    <% end %>
  <% end %>
<% end %>


<% unless @current_user == nil %>
  <% if @current_user.is_admin? %>
    <%= link_to 'Delete post', @post, :method => 'delete', :data => {:confirm => 'Are you sure, admin?'}, :class => "btn btn-danger" %>
  <% end %>
<% end %>

<!-- logic below probably shouldn't be there...fix this -->

<% @author = User.find(@post.user_id) %>
<p>Author: <a href="<%= "/users/#{@post.user_id}" %>"><%= @author.name %></a></p>

<!-- seems to work, try to break this -->
<iframe height='350' scrolling='no' src='<%= @post.codepen_embed %>' frameborder='no' allowtransparency='true' allowfullscreen='true' style='width: 100%;'>
</iframe>

<h2>Info:</h2>
<p><%= @post.blurb %></p>

<h2>Description:</h2>
<p><%= @post.description %></p>

<!-- change this to divs so it looks nicer later -->
<ul>
  <% @post.comments.each do |comment| %>
    <li><p><a href="<%= "/users/#{comment.user_id}" %>"><%= comment.user.name.capitalize %></a> - posted at <%= comment.created_at %></p>
    <p><%= comment.text %></p></li>
  <% end %>
</ul>

<%= render :partial => 'comment_form' %>




