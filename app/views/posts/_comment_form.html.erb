<%= form_for @comment, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <div class="col-md-6 col-md-offset-3">
      <%= f.text_area :text, :class => "form-control comment-textbox", :placeholder => "Write a comment" %>
    </div>
  </div>

  <%= f.hidden_field :post_page_id, :value => @post.id %>

  <div class="form-group">
    <div class="col-md-offset-3 col-md-6">
      <%= f.submit 'Post', :class => "btn btn-signin" %>
    </div>
  </div>
<% end %>
