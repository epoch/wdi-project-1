<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :autofocus => true, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :codepen %>
    <%= f.text_field :codepen, :required => true, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <%= f.submit "Post snippet", :class => "btn btn-signin" %>
  </div>
<% end %>
