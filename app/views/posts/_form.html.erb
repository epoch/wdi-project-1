<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :autofocus => true %>

  <%= f.label :codepen %>
  <%= f.text_field :codepen, :required => true %>

  <%= f.label :blurb %>
  <%= f.text_area :blurb %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>
<% end %>