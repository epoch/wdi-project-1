<div class="text-right">
  <div class="col-md-3 col-md-offset-9">
  <%= form_tag("/search", :method => "get", id: "search-form") do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], placeholder: "Search Posts", :class => "form-control" %>
      <span class="input-group-btn">
        <button class="btn btn-default" type="button"><i class="glyphicon glyphicon-search"></i></button>
      </span>
    </div>
    <% end %>
  </div>
</div>
<h1 class="text-center animated fadeInLeftBig">Code Snippets</h1>

<!-- make a list of posts here for the time being, sort out picture grid later -->

<div class="col-md-6 col-md-offset-3 animated fadeInLeft">
<ul class="list-group">
  <% @posts.each do |post| %>
  <% @author = User.find(post.user_id) %>
    <li class="list-group-item"><%= link_to post.title, "/posts/#{ post.id }" %> - posted by <%= @author.name.capitalize %>
    </li>
  <% end %>
</ul>
</div>

